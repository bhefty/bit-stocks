{
  "name": "bit-stocks",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "7.4.x"
  },
  "scripts": {
    "dev": "concurrently \"cd react-ui && npm run start\" \"npm run watch:server\"",
    "watch:server": "nodemon server",
    "start": "node --harmony-async-await server",
    "test": "mocha tests --recursive && cd react-ui/ && CI=true npm run test",
    "test:watch": "mocha tests  --recursive -w",
    "heroku-postbuild": "cd react-ui/ && npm install --only=dev && npm install && npm run build",
    "lint": "./node_modules/.bin/standard --verbose | snazzy",
    "lint-fix": "./node_modules/.bin/standard --fix",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [ "precommit-msg", "lint", "test" ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhefty/bit-stocks.git"
  },
  "author": "Bill Hefty",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bhefty/bit-stocks/issues"
  },
  "homepage": "https://github.com/bhefty/bit-stocks#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "isomorphic-fetch": "^2.2.1",
    "node-persist": "^2.0.11",
    "socket.io": "^2.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "chai": "^4.0.2",
    "concurrently": "^3.4.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
